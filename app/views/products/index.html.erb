<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnaill") %>
        <% else %>
          <%= image_tag("http://ww3.sinaimg.cn/large/006tKfTcly1ffn66pkt0jj30dw0dwac7.jpg", class: "thumbnaill") %>
        <% end %>
      <% end %>
      <%= product.title %> $ <%= product.price %>
    </div>
  <% end %>
</div>
